<div class="row justify-content-center mt-4">
    <div class="col-10">
        <%= form_with(model: @article, class: "shadow-sm p-4 mb-3 bg-light rounded-lg", local: true) do |f| %>

            <div class="form-group row">
                <div class="col-2 col-form-label">
                    <%= f.label :title, class: "text-dark" %>
                </div>
                <div class="col-10">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2 col-form-label">
                    <%= f.label :description, class: "text-dark" %><br/>
                </div>
                <div class="col-10">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article" %>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2 col-form-label">
                    <%= f.label :category, class: "text-dark" %><br/>
                </div>
                <div class="col-10">
                    <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Choose the article categories (can be empty)" }, { multiple: true, class: "custom-select", size: 5 }) %>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <%= f.submit class:"btn btn-outline-dark btn-lg" %>
            </div>


        <% end %>
    </div>
    <div class="form-group row col-12 justify-content-center">
        [ <%= link_to 'Cancel and return to articles index', articles_path, class: "text-dark" %> ]
    </div>
</div>