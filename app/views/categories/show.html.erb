<h1 class="text-center">Category: <%= @category.name %></h1>

<div class="text-center">
    <% if logged_in? && current_user.admin? %>
        <%= link_to "Edit category", edit_category_path(@category), class: "btn btn-outline-info my-4" %>
        <%= link_to 'Delete category', category_path(@category), class: "btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
</div>

<h3 class="text-center"><%= @category.name %> Articles</h3>

<div class="apple_pagination my-4">
    <div class="page_info">
        <%= page_entries_info @articles %>
    </div>
    <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/articles' %>

<div class="apple_pagination my-4">
    <div class="page_info">
        <%= page_entries_info @articles %>
    </div>
    <%= will_paginate @articles, :container => false %>
</div>