<div class="row justify-content-center mt-4">
    <div class="col-10">
        <%= form_with(model: @category, class: "shadow-sm p-4 mb-3 bg-light rounded-lg", local: true) do |f| %>

            <div class="form-group row">
                <div class="col-12">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter a category name" %>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <%= f.submit class:"btn btn-outline-dark btn-lg" %>
            </div>

        <% end %>
    </div>
    <% if @category.valid? %>
        <div class="form-group row col-12 justify-content-center">
            [ <%= link_to 'Cancel and return to category', category_path(@category), class: "text-dark" %> ]
        </div>
    <% end %>
    <div class="form-group row col-12 justify-content-center">
        [ <%= link_to 'Cancel and return to category index', categories_path, class: "text-dark" %> ]
    </div>
</div>