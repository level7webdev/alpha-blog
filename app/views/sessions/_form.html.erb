<div class="row justify-content-center mt-4">
    <div class="col-10">
        <%= form_with(scope: :session, url: login_path, class: "shadow-sm p-4 mb-3 bg-light rounded-lg", local: true) do |f| %>

            <div class="form-group row">
                <div class="col-2 col-form-label">
                    <%= f.label :email, class: "text-dark" %><br/>
                </div>
                <div class="col-10">
                    <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2 col-form-label">
                    <%= f.label :password, class: "text-dark" %><br/>
                </div>
                <div class="col-10">
                    <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <%= f.submit "Login", class:"btn btn-outline-dark btn-lg" %>
            </div>


        <% end %>
    </div>
    <div class="form-group row justify-content-center">
        [ <%= link_to 'Cancel and return to articles index', articles_path, class: "text-dark" %> ]
    </div>
</div>