<h1 class="text-center"><%= @user.username %>'s Profile</h1>

<%= gravatar_for @user, size: 200 %>

<div class="text-center">
    <% if logged_in? && @user == current_user %>
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info my-4" %>
        <%= link_to 'Delete Profile', user_path(@user), class: "btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
</div>

<h3 class="text-center"><%= @user.username %>'s Articles</h3>

<div class="apple_pagination my-4">
    <div class="page_info">
        <%= page_entries_info @articles %>
    </div>
    <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

<div class="apple_pagination my-4">
    <div class="page_info">
        <%= page_entries_info @articles %>
    </div>
    <%= will_paginate @articles, :container => false %>
</div>